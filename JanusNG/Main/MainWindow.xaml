<Window x:Class="Rsdn.JanusNG.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:localmain="clr-namespace:Rsdn.JanusNG.Main"
        xmlns:local="clr-namespace:Rsdn.JanusNG"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1200"
        Loaded="WindowLoaded">
	<Window.DataContext>
		<localmain:MainModel x:Name="Model" />
	</Window.DataContext>
	<Window.Resources>
		<BooleanToVisibilityConverter x:Key="BoolConv"/>
		<local:GravatarConverter x:Key="GravatarConv" Size="32">
		</local:GravatarConverter>
	</Window.Resources>
	<Grid Margin="4">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition />
		</Grid.RowDefinitions>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
			<Button Click="SignInClick" Margin="8" Visibility="{Binding IsNotSignedIn, Converter={StaticResource BoolConv}}">
				Sign In
			</Button>
			<StackPanel Visibility="{Binding IsSignedIn, Converter={StaticResource BoolConv}}" Orientation="Horizontal" Margin="4">
				<Ellipse Width="32" Height="32" Margin="4">
					<Ellipse.Fill>
						<ImageBrush ImageSource="{Binding Me.Email, Converter={StaticResource GravatarConv}}" />
					</Ellipse.Fill>
				</Ellipse>
				<TextBlock Text="{Binding Me.DisplayName}" VerticalAlignment="Center"/>
			</StackPanel>
		</StackPanel>
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="4" />
				<ColumnDefinition Width="3*" />
			</Grid.ColumnDefinitions>
			<ListView Name="ForumsList" ItemsSource="{Binding Forums}" SelectionChanged="ForumsSelectionChanged">
				<ListView.ItemTemplate>
					<DataTemplate>
						<TextBlock Text="{Binding Name}" />
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
			<GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" />
			<Grid Grid.Column="2">
				<Grid.RowDefinitions>
					<RowDefinition Height="*" />
					<RowDefinition Height="4" />
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>
				<ListView Name="MessagesList" ItemsSource="{Binding Topics}" SelectionChanged="MessagesSelectionChanged">
					<ListView.ItemTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding Subject}" />
						</DataTemplate>
					</ListView.ItemTemplate>
				</ListView>
				<GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" />
				<Border Grid.Row="2" BorderThickness="1" BorderBrush="#FF888888">
					<WebBrowser Name="MessageBrowser"/>
				</Border>
			</Grid>
		</Grid>
	</Grid>
</Window>