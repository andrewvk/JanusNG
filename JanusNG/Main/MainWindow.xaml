<Window x:Class="Rsdn.JanusNG.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:localmain="clr-namespace:Rsdn.JanusNG.Main"
        xmlns:msgview="clr-namespace:Rsdn.JanusNG.MessageView"
        mc:Ignorable="d"
        Title="RSDN@Home" Height="900" Width="1200"
        Loaded="WindowLoaded">
	<Window.DataContext>
		<localmain:MainModel x:Name="Model" />
	</Window.DataContext>
	<Window.Resources>
	</Window.Resources>
	<Grid Margin="4">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition />
		</Grid.RowDefinitions>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
			<Button Click="SignInClick" Margin="8" Visibility="{Binding IsNotSignedIn, Converter={StaticResource BoolConverter}}">
				Sign In
			</Button>
			<StackPanel Visibility="{Binding IsSignedIn, Converter={StaticResource BoolConverter}}" Orientation="Horizontal" Margin="4">
				<Ellipse Width="32" Height="32" Margin="4">
					<Ellipse.Fill>
						<ImageBrush ImageSource="{Binding Me.GravatarHash, Converter={StaticResource GravatarConverterSmall}}" />
					</Ellipse.Fill>
				</Ellipse>
				<TextBlock Text="{Binding Me.DisplayName}" VerticalAlignment="Center"/>
			</StackPanel>
		</StackPanel>
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="4" />
				<ColumnDefinition Width="3*" />
			</Grid.ColumnDefinitions>
			<TreeView Name="ForumsList" ItemsSource="{Binding Forums}" SelectedItemChanged="ForumsSelectionChanged">
				<TreeView.ItemContainerStyle>
					<Style TargetType="{x:Type TreeViewItem}">
						<Setter Property="IsExpanded" Value="True"/>
					</Style>
				</TreeView.ItemContainerStyle>
				<TreeView.ItemTemplate>
					<HierarchicalDataTemplate ItemsSource="{Binding Forums}">
						<TextBlock Text="{Binding Name}" FontWeight="DemiBold"/>
						<HierarchicalDataTemplate.ItemTemplate>
							<DataTemplate>
								<TextBlock Text="{Binding Name}"/>
							</DataTemplate>
						</HierarchicalDataTemplate.ItemTemplate>
					</HierarchicalDataTemplate>
				</TreeView.ItemTemplate>
			</TreeView>
			<GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" />
			<Grid Grid.Column="2">
				<Grid.RowDefinitions>
					<RowDefinition Height="1*" />
					<RowDefinition Height="4" />
					<RowDefinition Height="2*" />
				</Grid.RowDefinitions>
				<Border Grid.IsSharedSizeScope="True">
					<Border.Resources>
						<Style x:Key="TextBlockStyle" TargetType="{x:Type TextBlock}">
							<Setter Property="Margin" Value="3 0 3 0"/>
						</Style>
						<Style x:Key="TextBlockBoldStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource TextBlockStyle}">
							<Setter Property="FontWeight" Value="Bold"/>
						</Style>
					</Border.Resources>
					<TreeView Name="MessagesList" ItemsSource="{Binding Topics}" SelectedItemChanged="MessageSelectionChanged"
					          TreeViewItem.Expanded="TopicExpanded">
						<TreeView.ItemTemplate>
							<HierarchicalDataTemplate ItemsSource="{Binding Children}">
								<Grid>
									<Grid.ColumnDefinitions>
										<ColumnDefinition SharedSizeGroup="Subj" Width="*"/>
										<ColumnDefinition SharedSizeGroup="Author" Width="Auto"/>
										<ColumnDefinition SharedSizeGroup="AnswersCount" Width="Auto"/>
										<ColumnDefinition SharedSizeGroup="Rates" Width="Auto"/>
										<ColumnDefinition SharedSizeGroup="CreatedOn" Width="Auto"/>
									</Grid.ColumnDefinitions>
									<TextBlock Text="{Binding Message.Subject}" Style="{StaticResource TextBlockStyle}" />
									<StackPanel Grid.Column="1" Orientation="Horizontal">
										<Image Width="16" Height="16" Margin="2" Stretch="None"
										       Source="{Binding Message.Author.GravatarHash, Converter={StaticResource GravatarConverterInline}, IsAsync=True}">
											<Image.Clip>
												<EllipseGeometry RadiusX="8" RadiusY="8" Center="8, 8"/>
											</Image.Clip>
										</Image>
										<TextBlock Text="{Binding Message.Author.DisplayName}" Style="{StaticResource TextBlockStyle}" />
									</StackPanel>
									<TextBlock Grid.Column="2" Text="{Binding Message.AnswersCount}" Style="{StaticResource TextBlockStyle}" 
									           TextAlignment="Right"/>
									<TextBlock Grid.Column="3" Text="{Binding Message.Rates, Converter={StaticResource RateStringConverter}}"
									           Style="{StaticResource TextBlockStyle}" />
									<TextBlock Grid.Column="4" Text="{Binding Message.CreatedOn, StringFormat=g}" TextAlignment="Right"
									           Style="{StaticResource TextBlockStyle}" />
								</Grid>
							</HierarchicalDataTemplate>
						</TreeView.ItemTemplate>
					</TreeView>
				</Border>
				<GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" />
				<msgview:MessageView x:Name="MessageView" Grid.Row="2" Message="{Binding Message}"/>
			</Grid>
		</Grid>
	</Grid>
</Window>